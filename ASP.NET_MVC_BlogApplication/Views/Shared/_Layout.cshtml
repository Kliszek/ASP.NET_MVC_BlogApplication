@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_MVC_BlogApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.NET_MVC_BlogApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="height:56px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP.NET_MVC_BlogApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Recent">Browse Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(Context.Session.GetString("CurrentUser") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Manage">Manage your blogs</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if(Context.Session.GetString("CurrentUser") != null)
                        {
                            <li class="navbar-text">
                                <span>You are logged as: <i>@Context.Session.GetString("CurrentUser")</i> </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Log Out</a>
                            </li>
                        }else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Log In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
                            </li>   
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-2 col-lg-2">
                @if(ViewData["AllBlogs"] != null)
                {
                    <h3 class="h5 my-4 text-center">
                        All available blogs:
                    </h3>
                    <div class="list-group my-3">
                        @foreach(Blog blog in (IEnumerable<Blog>)ViewData["AllBlogs"]!)
                        {
                            <a asp-controller="Blog" asp-action="Recent" asp-route-id="@blog.BlogID" class="list-group-item list-group-item-action @((Blog?)ViewData["DisplayedBlog"]==blog ? "active" : "")">
                                @blog.Title
                                <span style="font-size: 0.75rem" class="ps-2 mt-1 pt-1 d-block fst-italic border-top ">by: @blog.OwnerID</span>
                            </a>
                        }
                    </div>
                }
            </div>
            <main role="main" style="min-height: calc(100vh - 117px);" class="pt-3 px-5 pb-5 col-sm-12 col-md-8 col-lg-8 bg-light">
                @RenderBody()
            </main>
            <div class="col-sm-6 col-md-2 col-lg-2">
                @if (Context.Session.GetString("CurrentUser") != null)
                {
                    <partial name="_ControlPanel" />
                }
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ASP.NET_MVC_BlogApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
